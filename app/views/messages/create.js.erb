<% if @message.errors.any? %>
  $("#form").html("<%= j render 'form' %>");
<% else %>
  <% publish_to "/messages/new" do %>
    alert("Hello from Private Pub");
    $("#form").html("<div class='alert alert-success center' id='message-sent'>Thanks!  Your message has been sent and we will get back to you as soon as possible.</div>");
  <% end %>
<% end %>