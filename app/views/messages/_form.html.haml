= form_for @message, remote: true, html: { role: "form" } do |f|
  .form-group{class: ("has-error" if @message.errors.messages[:name].present?)}
    = f.label :name, raw("<abbr title='required'>*</abbr> Full Name"), class: "control-label" if ENV["FORM_LABELS"]
    = f.text_field :name, class: "form-control", placeholder: "Full Name*"
    - if @message.errors.messages[:name].present?
      %p.help-block= @message.errors.messages[:name][0]
  .row
    .col-md-6
      .form-group{class: ("has-error" if @message.errors.messages[:email].present?)}
        = f.label :email, raw("<abbr title='required'>*</abbr> Email Address"), class: "control-label" if ENV["FORM_LABELS"]
        = f.email_field :email, class: "form-control", placeholder: "Email Address*"
        - if @message.errors.messages[:email].present?
          %p.help-block= @message.errors.messages[:email][0]
    .col-md-6
      .form-group{class: ("has-error" if @message.errors.messages[:phone].present?)}
        = f.label :phone, "Phone Number", class: "control-label" if ENV["FORM_LABELS"]
        = f.phone_field :phone, class: "form-control", placeholder: "Phone Number"
        - if @message.errors.messages[:phone].present?
          %p.help-block= @message.errors.messages[:phone][0]
  .form-group{class: ("has-error" if @message.errors.messages[:content].present?)}
    = f.label :content, raw("<abbr title='required'>*</abbr> Message"), class: "control-label" if ENV["FORM_LABELS"]
    = f.text_area :content, rows: 5, class: "form-control", placeholder: "Message*"
    - if @message.errors.messages[:content].present?
      %p.help-block= @message.errors.messages[:content][0]
  %p.help-block.pull-left * Required
  = f.submit "Submit", class: "btn btn-primary pull-right"